{
  "name": "gitHex.abortOperation",
  "description": "Abort a paused rebase/merge/cherry-pick and restore original state",
  "inputSchema": {
    "type": "object",
    "required": ["repoPath"],
    "properties": {
      "repoPath": {
        "type": "string",
        "description": "Path to git repository"
      }
    }
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "success": { "type": "boolean" },
      "operationType": { "type": "string" },
      "error": { "type": "string" },
      "summary": { "type": "string" }
    }
  },
  "timeoutSecs": 30
}
