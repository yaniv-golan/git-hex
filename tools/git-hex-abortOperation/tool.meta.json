{
  "name": "git-hex-abortOperation",
  "description": "Abort a paused rebase/merge/cherry-pick and restore original state",
  "icons": [
    {
      "src": "../../assets/icons/abort-operation.svg"
    }
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "repoPath": {
        "type": "string",
        "description": "Path to git repository (optional; defaults to the single configured root if omitted)"
      }
    }
  },
  "outputSchema": {
    "type": "object",
    "required": ["success", "operationType", "summary"],
    "properties": {
      "success": { "type": "boolean" },
      "operationType": { "type": "string", "enum": ["none", "rebase", "cherry-pick", "merge", "revert", "bisect"] },
      "error": { "type": "string" },
      "summary": { "type": "string" }
    }
  },
  "annotations": {
    "readOnlyHint": false,
    "destructiveHint": true,
    "idempotentHint": false,
    "openWorldHint": false
  },
  "timeoutSecs": 30
}
