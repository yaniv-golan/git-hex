{
  "name": "git-hex-continueOperation",
  "description": "Continue a paused rebase/merge/cherry-pick after resolving conflicts",
  "icons": [
    {
      "src": "../../assets/icons/continue-operation.svg"
    }
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "repoPath": {
        "type": "string",
        "description": "Path to git repository (optional; defaults to the single configured root if omitted)"
      }
    }
  },
  "outputSchema": {
    "type": "object",
    "required": ["success", "operationType", "completed", "paused", "conflictingFiles", "summary"],
    "properties": {
      "success": { "type": "boolean" },
      "operationType": { "type": "string" },
      "completed": { "type": "boolean" },
      "paused": { "type": "boolean" },
      "conflictingFiles": {
        "type": "array",
        "items": { "type": "string" }
      },
      "error": { "type": "string" },
      "summary": { "type": "string" }
    }
  },
  "annotations": {
    "readOnlyHint": false,
    "destructiveHint": true,
    "idempotentHint": false,
    "openWorldHint": false
  },
  "timeoutSecs": 30
}
